~/.cache/bazel/                                                            <= outputRoot
         └─_bazel_<user-name>/                                             <= outputUserRoot
           └─<hash-md5>/                                                   <= outputBase
             │                                                                hash of the client's workspace root
             │                                                                (such as ~/src/my-project), can be
             │                                                                generated by: `echo -n $(pwd) | md5sum`
             ├─execroot/                                                   <= directory for all actions
             │ └─_main/                                                    <= 
             │   │                                                            workspace-name>/bazel-<workspace-name>
             │   │                                                            symlink to here
             │   └─bazel-out/                                              <= outputPath
             │     │                                                          all actual output of the build is
             │     │                                                          under here,
             │     │                                                          <workspace-root>/bazel-out symlink
             │     │                                                          to here
             │     └─k8-fastbuild/                                         <= [no description]
             │       ├─bin/                                                <= binary output
             │       │ │                                                      <workspace-root>/bazel-bin symlink
             │       │ │                                                      to here
             │       │ └─<package-path>/<target-name>.runfiles/_main/      <= the defualt work directory for a target
             │       └─testlogs/                                           <= testlogsDirectory
             │                                                                <workspace-root>/bazel-testlogs
             │                                                                symlink to here
             └─sandbox/                                                    <= sandboxRoot
               ├─processwrapper-sandbox/                                   <= generated if '--sandbox_debug'
               │ │                                                            option is present
               │ └─<magic-number>/                                         <= (TODO: where is this number comes from?)
               │   └─execroot/                                             <= mimics execroot
               └─sandbox_stash/                                            <= generated if '--sandbox_debug'
                 │                                                            option is not present
                 └─CcMakeMakeRule/                                         <= (TODO)
                   └─<magic-number>/                                       <= (TODO: where is this number comes from?)
                     └─execroot/                                           <= mimics execroot
