~/.cache/bazel/                                                            <= outputRoot
         └─_bazel_<user-name>/                                             <= outputUserRoot
           └─<hash-md5>/                                                   <= outputBase
             │                                                                hash of the client's workspace root
             │                                                                (such as ~/src/my-project), can be
             │                                                                generated by: `echo -n $(pwd) | md5sum`
             ├─execroot/                                                   <= the-'canonical execroot', directory
             │ │                                                              for all actions
             │ └─_main/                                                    <= 
             │   │                                                            workspace-name>/bazel-<workspace-name>
             │   │                                                            symlink to here
             │   └─bazel-out/                                              <= outputPath
             │     │                                                          all actual output of the build is
             │     │                                                          under here,
             │     │                                                          <workspace-root>/bazel-out symlink
             │     │                                                          to here
             │     ├─k8-<mode/                                             <= mode:
             │     │ │                                                        - fastbuild (default)
             │     │ │                                                        - dbg (when --compilation_mode=dbg)
             │     │ │                                                        - opt (when --compilation_mode=opt)
             │     │ ├─bin/                                                <= binary output
             │     │ │ │                                                      <workspace-root>/bazel-bin symlink
             │     │ │ │                                                      to here
             │     │ │ └─<package-path>/                                   <= [no description]
             │     │ │   ├─<target-name>.runfiles/                         <= [no description]
             │     │ │   │ └─_main/                                        <= the defualt work directory for a
             │     │ │   │                                                    target (bazel run //package:target)
             │     │ │   ├─<target-name>/                                  <= appears in 'processwrapper execroot'
             │     │ │   ├─<target-name>.build_tmpdir/                     <= appears in 'processwrapper execroot'
             │     │ │   ├─<target-name>_foreign_cc/                       <= [no description]
             │     │ │   └─copy_<target-name>/                             <= appears in 'canonical execroot'
             │     │ └─testlogs/                                           <= testlogsDirectory
             │     │                                                          <workspace-root>/bazel-testlogs
             │     │                                                          symlink to here
             │     └─k8-dbg/                                               <= outputPath (when --compilation_mode=dbg)
             └─sandbox/                                                    <= sandboxRoot
               ├─processwrapper-sandbox/                                   <= used to conduct build/run
               │ │                                                            will be deleted if
               │ │                                                            '--sandbox_debug' option is not present
               │ └─<magic-number>/                                         <= (TODO: where is this number comes from?)
               │   └─execroot/                                             <= 'processwrapper execroot', mimics
               │                                                              the-'canonical execroot'
               └─sandbox_stash/                                            <= [no description]
                 └─CcMakeMakeRule/                                         <= (TODO)
                   └─<magic-number>/                                       <= (TODO: where is this number comes from?)
                     └─execroot/                                           <= 'sandbox stash execroot', mimics
                                                                              the-'canonical execroot'
